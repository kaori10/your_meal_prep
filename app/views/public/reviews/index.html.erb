<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<div class="heading06"><i class="fas fa-star-and-crescent"></i> Review</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-5">
			<%= attachment_image_tag @recipe, :image, style: "width: 600px; height: 400px;", fallback: "noimage.jpg" %>
			<%= link_to "<<BACK", recipe_path(@recipe), class: "button light ml-3 mt-3" %>
		</div>
		<div class="col-lg-1">
		</div>
		<div class="col-lg-6">
			<div class="title-a"><%= @recipe.title %></div>
			<table class="table">
	            <div class="card-content">
	                <div class="content average-score">
		                <div class="star-rating mb-2">
		                  <div class="star-rating-front" style="width: <%= @recipe.review_score_percentage %>%">★★★★★</div>
		                  <div class="star-rating-back">★★★★★</div>
		                </div>
		                <div class="average-score-display ml-3 pt-2">
		                  <%= @recipe.avg_score %>点（<%= @recipe.reviews.count %>件のレビュー）
		                </div>
		             </div>
	            </div>
				<thead>
					<tr>
						<th>ユーザー</th><th>点数</th><th>内容</th>
					</tr>
				</thead>
				<tbody>
					<% @reviews.each do |review| %>
					<tr>
						<td><%= review.user.nickname %></td>
						<td><%= review.score %></td>
						<td><%= review.content %></td>
					</tr>
					<% end%>
				</tbody>
			</table>
		</div>
	</div>
</div>