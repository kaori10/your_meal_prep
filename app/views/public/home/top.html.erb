<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="heading06"><i class="fas fa-utensils"></i>お気に入りランキング</div>
    </div>
  </div>
  <div class="row">
    <section class="section">
      <div class="columns is-multiline">
        <% @all_ranks.each.with_index(1) do |recipe, i| %>
          <div class="column is-4">
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= link_to recipe_path(recipe) do %>
                    <%= attachment_image_tag recipe, :image %>
                  <% end %>
                </figure>
                <i class="far fa-heart"><%= recipe.favorites.count %></i>
                第<%= i %>位
                <%= recipe.title %>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-left">
                    <figure class="image is-48x48">
                      <%= attachment_image_tag recipe.user, :profile_image, fallback: "noimage.jpg", class: "profile_image" %>
                    </figure>
                  </div>
                  <div class="media-content">
                    <div class="name-a"><%=link_to recipe.user.nickname, user_path(recipe.user) %></div>
                  </div>
                </div>

                <div class="content">
                  <time><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
