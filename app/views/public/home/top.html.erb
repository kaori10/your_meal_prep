<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="heading06"><i class="fas fa-utensils"></i>お気に入りランキング</div>
    </div>
  </div>
  <div class="row">
    <section class="section">
      <div class="columns is-multiline">
        <% @all_ranks.each.with_index(1) do |recipe, i| %>
          <div class="column is-4">
            <div class="home-a"><i class="fas fa-crown fa-1x fa-yellow"></i> 第<%= i %>位</div>
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= link_to recipe_path(recipe) do %>
                    <%= attachment_image_tag recipe, :image %>
                  <% end %>
                </figure>
                <div class="title-c"><%= recipe.title %></div>
              </div>

              <div class="card-content">
                <div class="media">
                  <div class="media-left">
                    <figure class="image is-48x48">
                      <%= attachment_image_tag recipe.user, :profile_image, fallback: "noimage.jpg", class: "profile_image" %>
                    </figure>
                  </div>
                  <div class="media-content">
                    <%=link_to recipe.user.nickname, user_path(recipe.user), class: "userlink" %>
                  </div>
                </div>
                <div class="content">
                  更新日時：<time><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
                  <span class="heart-a">
                    <i class="far fa-heart fa-2x fa-red"></i>
                    <%= recipe.favorites.count %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
