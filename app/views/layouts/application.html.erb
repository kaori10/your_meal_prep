<!DOCTYPE html>
<html>
  <head>
    <title>YourMealPrep</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/24ba2831f8.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">

  </head>

  <body>
    <div class="wrapper">
      <header>
            <%= link_to image_tag('1601797813082.png', style: "height: 120px;"), root_path %>


        <% if admin_signed_in? %>
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-default"  %>
          <%= link_to 'レシピ一覧', recipes_path, class: "btn btn-default", class: "btn btn-default"  %>
          <%= link_to 'ユーザー一覧', admin_users_path, class: "btn btn-default", class: "btn btn-default"  %>
          <%= link_to 'ジャンル一覧', admin_users_path, class: "btn btn-default", class: "btn btn-default"  %>
        <% elsif user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-default"  %>
          <%= link_to 'レシピ一覧', recipes_path, class: "btn btn-default"  %>
        <% else %>
          <%= link_to root_path, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
          <% end %>
          <%= link_to 'ログイン', new_user_session_path, class: "btn btn-default" %>
          <%= link_to '新規登録', new_user_registration_path, class: "btn btn-default"  %>
          <%= link_to 'レシピ一覧', recipes_path, class: "btn btn-default"  %>
        <% end%>
      </header>

      <main>
        <%= yield %>
      </main>

      <footer>
        <%= link_to new_admin_session_path do %>
        Copyright © Infratop Inc. All Rights Reserved.
        <% end %>
      </footer>
    </div>

  </body>
</html>
