<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>会員一覧</h1>
			<table class="table">
				<thead>
					<tr>
						<th class="api-th">会員ID</th>
						<th class="api-th">氏名</th>
						<th class="api-th">メールアドレス</th>
						<th class="api-th">ステータス</th>
					</tr>
				</thead>
				<% @users.each do |user| %>
				<tbody>
					<tr>
						<td><%= user.id %></td>
						<td>
							<%= user.last_name %>
							<%= user.first_name %>
						</td>
						<td><%= user.email %></td>
						<td></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>