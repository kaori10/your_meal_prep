<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<div class="heading06"><i class="fas fa-user-cog"></i> User edit</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<%= render 'layouts/error', resource: @user %>
			<%= form_for(@user) do |f| %>
				<table>
					<thead>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</thead>
					<tbody>
						<tr>
							<td><%= f.label :profile_image, "プロフィール画像" %></td>
							<td colspan="2"><%= f.attachment_field :profile_image, :placeholder =>"#{@user.profile_image}" %></td>
						</tr>
						<tr>
							<td>名前</td>
							<td><%= f.label :first_name, "(姓)" %> <%= f.text_field :first_name, :placeholder =>"#{@user.first_name}" %></td>
							<td><%= f.label :last_name, "(名)" %> <%= f.text_field :last_name, :placeholder =>"#{@user.last_name}" %></td>
						</tr>
						<tr>
							<td>フリガナ</td>
							<td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"#{@user.first_name_kana}" %></td>
							<td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"#{@user.last_name_kana}" %></td>
						</tr>
						<tr>
							<td><%= f.label :nickname, "ニックネーム" %></td>
							<td colspan="2"><%= f.text_field :nickname, :placeholder =>"#{@user.nickname}" %></td>
						</tr>
						<tr>
							<td><%= f.label :profile, "プロフィール" %></td>
							<td colspan="2"><%= f.text_area :profile, :placeholder =>"#{@user.profile}" %></td>
						</tr>
						<tr>
							<td><%= f.label :email, "メールアドレス" %></td>
							<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@user.email}" %></td>
						</tr>
						<tr>
							<td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
							<td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@user.postal_code}" %></td>
						</tr>
						<tr>
							<td><%= f.label :address, "住所" %></td>
							<td colspan="2"><%= f.text_field :address, :placeholder =>"#{@user.address}" %></td>
						</tr>
						<tr>
							<td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %></td>
							<td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"#{@user.telephone_number}" %></td>
						</tr>
						<tr>
							<td>会員ステータス</td>
							<td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %></td>
							<td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", class: "text-invalid" %></td>
						</tr>

						<tr>
							<td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
						</tr>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>
