<div class="container">
	<div class="row">
		<div class="col-lg-4">
		  <div class="heading06"><i class="fas fa-user"></i>ジャンル登録</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<%= render 'form', genre: @genre, url: admin_genres_path, submit: '登録' %>
		</div>
		<div class="col-lg-6">
			<table class="table">
				<thead>
					<tr class="warning">
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= link_to genre.name, admin_recipes_path(genre_id: genre.id), class: "underline" %></td>
							<td>
								<% if genre.is_active? %>
									<span class="text-active">有効</span>
								<% else %>
									<span class="text-invalid">無効</span>
								<% end %>
							</td>
							<td class="text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>